= form_for(ahot, :url => admin_ad_hoc_option_type_url(ahot), :html => { :method => :put }) do |f|
  %fieldset
    %legend= t("option_values")
    %tr
      %td= ahot.option_type.name
      %td= ahot.option_type.presentation
      %td= ahot.is_required
      %td.actions
        = link_to_with_icon 'delete',  t("remove"), remove_admin_ad_hoc_option_type_url(ahot)
    %tr
      %td{:colspan => "4"}
        %table.index
          %thead
            %th= t("name")
            %th= t("display")
            %th= t("price_modifier")
            %th.actions
          %tbody#option_values
            = f.fields_for :option_values do |option_value_form|
              = render :partial => "option_value_fields", :locals=>{:f => option_value_form}
    %p.form-buttons
      = button t("update")
      = t("or")
      = link_to t("cancel"), selected_admin_ad_hoc_option_types_url(@product)