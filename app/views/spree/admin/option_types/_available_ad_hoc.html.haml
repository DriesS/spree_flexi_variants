%fieldset
  %legend
    = t("add_option_types")
  %table.index
    %thead
      %th= t("name")
      %th= t("presentation")
      %th.actions
    %tbody
    - @available_option_types.each do |ot|
      %tr
        %td= ot.name
        %td= ot.presentation
        %td.actions
          = link_to icon('add') + ' ' + t("select"),                       |
                              url_for(:controller => "admin/option_types", |
                                      :id => ot,                           |
                                      :product_id => @product.permalink,   |
                                      :action => "select_ad_hoc",          |
                                      :option_type_id =>  ot),             |
            :class => 'iconlink'                                           |
    - if @available_option_types.empty?
      %tr
        %td{:colspan => "2"}= t('none_available')